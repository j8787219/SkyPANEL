# =============================================================================
# SkyPANEL Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# For Docker: postgresql://skypanel:skypanel123@postgres:5432/skypanel
# For local development: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://skypanel:skypanel123@postgres:5432/skypanel

# Database credentials (used by Docker Compose)
POSTGRES_DB=skypanel
POSTGRES_USER=skypanel
POSTGRES_PASSWORD=skypanel123
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION (for session storage and caching)
# =============================================================================
# Redis connection URL
# For Docker: redis://:redis123@redis:6379
# For local development: redis://localhost:6379
REDIS_URL=redis://:redis123@redis:6379
REDIS_PASSWORD=redis123
REDIS_PORT=6379

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
# Secure random string for session encryption (generate a strong one!)
# You can generate one with: openssl rand -base64 32
SESSION_SECRET=your_secure_random_string_here_change_this_in_production

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Application port (default: 5000)
PORT=5000
APP_PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# =============================================================================
# VIRTFUSION API INTEGRATION
# =============================================================================
# VirtFusion API endpoint and authentication
VIRTFUSION_API_URL=https://your-virtfusion.com/api/v1
VIRTFUSION_API_KEY=your_virtfusion_api_key

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP2GO API configuration (recommended)
SMTP2GO_API_KEY=your_smtp2go_api_key

# Email sender information
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=SkyPANEL Support

# Alternative SMTP configuration (if not using SMTP2GO)
SMTP_HOST=mail.smtp2go.com
SMTP_PORT=2525
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_SECURE=false

# =============================================================================
# DISCORD INTEGRATION (Optional)
# =============================================================================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
DISCORD_ROLE_ID=your_discord_role_id

# Discord Bot Integration (Optional)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_server_id
DISCORD_CHANNEL_ID=your_discord_channel_id
DISCORD_ALLOWED_ROLE_IDS=role_id_1,role_id_2
DISCORD_ALLOWED_USER_IDS=user_id_1,user_id_2

# =============================================================================
# GOOGLE AI INTEGRATION (Optional)
# =============================================================================
# Google Gemini API key for AI-powered support
GOOGLE_AI_API_KEY=your_google_gemini_api_key

# =============================================================================
# BETTERSTACK MONITORING (Optional)
# =============================================================================
# BetterStack API key for monitoring and logging
BETTERSTACK_API_KEY=your_betterstack_api_key

# =============================================================================
# PAYPAL CONFIGURATION
# =============================================================================
# PayPal environment settings
VITE_PAYPAL_SANDBOX=true
VITE_PAYPAL_CURRENCY=USD

# PayPal Sandbox credentials (for testing)
VITE_PAYPAL_SANDBOX_CLIENT_ID=your_paypal_sandbox_client_id
VITE_PAYPAL_SANDBOX_SECRET=your_paypal_sandbox_secret

# PayPal Live credentials (for production)
VITE_PAYPAL_CLIENT_ID=your_paypal_live_client_id
VITE_PAYPAL_SECRET=your_paypal_live_secret

# =============================================================================
# STRIPE CONFIGURATION (Optional)
# =============================================================================
# Stripe API keys for payment processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT secret for API authentication (if used)
JWT_SECRET=your_jwt_secret_here

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable/disable specific logging features
LOG_SQL_QUERIES=false
LOG_API_REQUESTS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable development features
ENABLE_DEV_TOOLS=true

# Hot reload settings
VITE_HMR_PORT=24678

# =============================================================================
# CLOUDFLARE SETTINGS (if using Cloudflare Workers)
# =============================================================================
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_ZONE_ID=your_cloudflare_zone_id
CF_ROUTE=your_cloudflare_route

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
