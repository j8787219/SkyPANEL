# =============================================================================
# SkyPANEL Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your actual .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================
# Secret key for session encryption - generate a strong random string
SESSION_SECRET=your_super_secret_session_key_here

# =============================================================================
# VIRTFUSION API INTEGRATION
# =============================================================================
# VirtFusion API endpoint URL
VIRTFUSION_API_URL=https://your-virtfusion-instance.com/api/v1

# VirtFusion API token - obtain from your VirtFusion admin panel
VIRTFUSION_API_TOKEN=your_virtfusion_api_token_here

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================
# Environment mode (development, production)
NODE_ENV=development

# Server configuration
PORT=3333
HOST=0.0.0.0
VITE_PORT=3333

# =============================================================================
# AI INTEGRATION
# =============================================================================
# Google AI/Gemini API key - get from Google AI Studio
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# MONITORING (OPTIONAL)
# =============================================================================
# BetterStack API key for monitoring and logging
BETTERSTACK_API_KEY=your_betterstack_api_key_here

# =============================================================================
# PAYPAL CONFIGURATION
# =============================================================================
# PayPal sandbox mode (true for testing, false for production)
VITE_PAYPAL_SANDBOX=true

# PayPal Sandbox credentials (for testing)
VITE_PAYPAL_SANDBOX_CLIENT_ID=your_paypal_sandbox_client_id
VITE_PAYPAL_SANDBOX_SECRET=your_paypal_sandbox_secret

# PayPal Production credentials
VITE_PAYPAL_CLIENT_ID=your_paypal_production_client_id
VITE_PAYPAL_SECRET=your_paypal_production_secret

# PayPal settings
VITE_PAYPAL_CURRENCY=USD

# PayPal Webhook IDs
VITE_PAYPAL_WEBHOOK_ID=your_paypal_webhook_id
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# =============================================================================
# INTERSERVER API INTEGRATION
# =============================================================================
# InterServer API key for server management
INTERSERVER_API_KEY=your_interserver_api_key_here

# =============================================================================
# COMPANY BRANDING
# =============================================================================
# Your company/brand name
COMPANY_NAME=Your Company Name

# Frontend URL for your application
FRONTEND_URL=https://your-domain.com

# =============================================================================
# DNS CONFIGURATION (OPTIONAL)
# =============================================================================
# Custom nameservers for DNS management
# DNS_NS1=ns1.your-domain.com
# DNS_NS2=ns2.your-domain.com
# DNS_NS3=ns3.your-domain.com

# =============================================================================
# EMAIL SERVICE CONFIGURATION (OPTIONAL)
# =============================================================================
# SMTP configuration for sending emails
# Uncomment and configure these for email functionality:
# SMTP_HOST=your.smtp.server.com
# SMTP_PORT=587
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password
# SMTP_SECURE=true

# =============================================================================
# DISCORD BOT INTEGRATION (OPTIONAL)
# =============================================================================
# Discord bot configuration for notifications and management
# Uncomment and configure these for Discord bot functionality:
# DISCORD_BOT_TOKEN=your_discord_bot_token
# DISCORD_GUILD_ID=your_discord_server_id
# DISCORD_CHANNEL_ID=your_discord_channel_id
# DISCORD_ALLOWED_ROLE_IDS=role_id_1,role_id_2
# DISCORD_ALLOWED_USER_IDS=user_id_1,user_id_2

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. Generate strong random strings for SESSION_SECRET
# 2. Use sandbox PayPal credentials for development
# 3. Set NODE_ENV=development for local development
# 4. Ensure DATABASE_URL points to your development database
# 5. Keep all API keys secure and never commit them to version control
